{
    "functions": {
        "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    },
    "hosting": [
        {
            "target": "docker-snippets-admin",
            "public": "admin-site/dist",
            "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "docker-snippets",
            "public": "client/dist",
            "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        }
    ]
}
